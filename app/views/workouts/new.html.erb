<h1>New Workout</h1>
  <%= form_with model: Workout.new, local: true do |f| %>

  <div class="form-group">
    <label>Date</label>
    <%= f.text_field :date, value: @initial_date, type: :date %>
  </div>
  <div class="form-group">
    <label>Workout kind</label>
    <%= f.select :kind, [["swimming", 'swimming'], ["bike", 'bicycle']] %>
  </div>

  <%= f.submit 'save', class: 'btn btn-primary' %>
<% end %>
