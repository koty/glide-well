<%= form_with model: @workout, html: {style: "margin-top: 2em; margin-bottom: 2em"}, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, type: :date %>
  </div>
  <div class="form-group">
    <%= f.label :kind %>
    <%= f.select :kind, [%w(swimming swimming), %w(bike bicycle)] %>
  </div>
  <div class="actions">
    <%= f.submit 'save', class: "btn btn-primary" %>
  </div>
<% end %>
