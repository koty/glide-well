<%= form_with model: @workout, local: true do |f| %>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date, type: :date %>
  </div>
  <div class="field">
    <%= f.label :kind %>
    <%= f.select :kind, [%w(swimming swimming), %w(bike bicycle)] %>
  </div>
  <div class="actions">
    <%= f.submit '保存', class: "btn btn-primary" %>
  </div>
<% end %>
