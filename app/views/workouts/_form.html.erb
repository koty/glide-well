<%= form_with model: @workout, html: {style: "margin-top: 2em; margin-bottom: 2em"}, local: true do |f| %>
  <% if @workout.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, type: :date, style: "width: 120px;" %>
    <%= f.label :kind %>
    <%= f.select :kind, [["swimming", 'swimming'], ["bike", 'bicycle']] %>
  </div>
  <div>
    <%= f.label :impression %>
    <%= f.text_area :impression %>
  </div>
  <div class="actions">
    <%= f.submit 'save', class: "btn btn-primary" %>
  </div>
<% end %>
